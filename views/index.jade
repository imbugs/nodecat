section
  .main
    - if (notes.length) {
    - notes.forEach (function (note) {
      article
        header
          h2
            a(href= note.url)= note.title
          time= note.readableDate
        .content!= note.bodyParsed
        footer
          span.post-meta= 'Posted in '
            - note.tags.forEach (function (tag) {
              - if (tag) {
                  a.tag(href= '/tags/' + tag)= tag
              - }
            - })
            = ',&nbsp;&nbsp;by mockee,&nbsp;&nbsp;'
            a(href= note.url + '#comments')= note.comments + ' comments'
    - })
    - }
aside 
  .grey-mod
    .owner-avatar
      a(href='http://www.douban.com/people/mockee/', target='_blank')
        img(src='http://static.mockee.com/images/mockee-avatar-48x48.jpg')
    .owner-intro
      h4 mockee
      p
        = 'Living in '
        a(href='http://www.alphatown.com') 笑脸男胡同 
  // latest notes list
  != partial('partials/terse_list', { locals: { title: 'Latest', notes: notes } }) 
  // recent comments
  .mod
    .hd
      h3 Comments
    .bd
      ul.terse-list
        - comments.forEach(function (comment) {
          - if (comment) {
            li
              img.avatar(src=comment.gravatar)
              p.info
                = comment.author
                em on
                br
                a(href=comment.nurl)= comment.ntitle
          - }
        - }) 
  .mod
    .hd
      h3 Friends
    .bd
      ul.links
        li
          ='Tifa · '
          a(href='http://tifafa.com') Studio Tifafa
  - if (user) { 
    != partial('partials/privilege') 
  - }
  .mod
    a.atom(href='/atom.xml') Subscribe
