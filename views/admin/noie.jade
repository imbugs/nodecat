style
  .noie{text-align:center;width:644px;margin:150px auto}
  .noie h1{line-height:26px}
  .noie a,.noie a:hover{display:inline-block;*display:inline;zoom:1;background:url(/img/browsers.png) no-repeat;margin-left:30px}
  .noie a:hover{filter:alpha(opacity=80)}
  .noie p{margin-left:-30px}
  .noie .hd,.noie .bd{margin-bottom:20px}
