extends ../layout

block content
  form(method='post', action='/user/create')
    fieldset
      legend= title
        .item 
          label(for='user[email]') Email:
          input(name='user[email]', value='')
        .item 
          label(for='user[name]') Username:
          input(name='user[name]', value='')
