  a.chrome,a.chrome:hover{width:111px;height:112px}
  a.firefox,a.firefox:hover{width:105px;height:115px;background-position:-131px 0}
  a.safari,a.safari:hover{width:100px;height:111px;background-position:-256px 0}
  a.opera,a.opera:hover{width:97px;height:109px;background-position:-378px 0}
  a.ie,a.ie:hover{width:111px;height:115px;background-position:-489px 0}
